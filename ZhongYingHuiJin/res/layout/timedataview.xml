<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headerpagebg"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/btuback" />

        <ImageButton
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/add" />

        <TextView
            android:id="@+id/detailname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/default4"
            android:textColor="@color/black"
            android:textSize="24dp" >
        </TextView>
    </RelativeLayout>

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/evalue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_x="156dp"
            android:layout_y="66dp"
            android:gravity="left"
            android:text="0"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/closevalue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_x="250dp"
            android:layout_y="22dp"
            android:text="0.00"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/timenow"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_x="250dp"
            android:layout_y="66dp"
            android:text="00:00:00"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="218dp"
            android:layout_y="66dp"
            android:text="时:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="218dp"
            android:layout_y="22dp"
            android:text="收:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="128dp"
            android:layout_y="22dp"
            android:text="开:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="128dp"
            android:layout_y="44dp"
            android:text="高:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="218dp"
            android:layout_y="44dp"
            android:text="低:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/highvalue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_x="156dp"
            android:layout_y="44dp"
            android:gravity="left"
            android:text="0.00"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/lowvalue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_x="250dp"
            android:layout_y="44dp"
            android:text="0.00"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/nowvalue"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="22dp"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/defaultvalue"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/updownpecent"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_x="1dp"
            android:layout_y="66dp"
            android:gravity="center"
            android:text="@string/defaultpercent"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/updownvalue"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_x="58dp"
            android:layout_y="66dp"
            android:gravity="center"
            android:text="@string/defaultvalue"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="128dp"
            android:layout_y="66dp"
            android:text="额:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/openvalue"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_x="156dp"
            android:layout_y="22dp"
            android:gravity="left"
            android:text="0.00"
            android:textColor="@color/white" />
    </AbsoluteLayout>

    <RelativeLayout
        android:id="@+id/ttjlayout"
        android:layout_width="fill_parent"
        android:layout_height="15dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ttjbuylabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dip"
            android:text="买："
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/ttjbuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ttjbuylabel"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/ttjselllabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_toRightOf="@+id/ttjbuy"
            android:text="卖："
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/ttjsell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ttjselllabel"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/timedataviewlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/timeviewlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >
        </LinearLayout>

        <SlidingDrawer
            android:id="@+id/slidingDrawer"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-180dip"
            android:layout_toRightOf="@+id/timeviewlayout"
            android:allowSingleTap="true"
            android:animateOnClick="true"
            android:content="@+id/content"
            android:handle="@+id/handle"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shows" />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ListView
                    android:id="@+id/timeABlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redab"
                    android:divider="#FFFFFF" >
                </ListView>
            </LinearLayout>
        </SlidingDrawer>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dip"
            android:layout_toLeftOf="@+id/point"
            android:background="@drawable/point1" >
        </ImageView>

        <ImageView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="8dip"
            android:background="@drawable/point2" >
        </ImageView>
    </RelativeLayout>

</LinearLayout>