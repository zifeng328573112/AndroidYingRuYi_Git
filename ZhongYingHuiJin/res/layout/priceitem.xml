            android:gravity="center"
            android:text="average"
            android:textSize="17dip" />

        <TextView
            android:id="@+id/turnover"
            android:layout_width="125.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="volume"
            android:textSize="17dip" />
