<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/columnheadmov"
        android:layout_width="525.0dip"
        android:layout_height="@dimen/price_item_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/last"
            android:layout_width="75.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="last"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/updown"
            android:layout_width="75.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="updown"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/updownrate"
            android:layout_width="75.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="updownrate"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/open"
            android:layout_width="75.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="open"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/high"
            android:layout_width="75.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="high"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/low"
            android:layout_width="75.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="low"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/close"
            android:layout_width="75.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="close"
            android:textSize="18dip" />
    </LinearLayout>

</LinearLayout>